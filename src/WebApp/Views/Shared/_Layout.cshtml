                <li><a asp-area="Identity" asp-page="/Account/Register">Registrar</a></li>
            </ul>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <footer>
        <p>&copy; 2023 - WebApp</p>
    </footer>
</body>
</html>